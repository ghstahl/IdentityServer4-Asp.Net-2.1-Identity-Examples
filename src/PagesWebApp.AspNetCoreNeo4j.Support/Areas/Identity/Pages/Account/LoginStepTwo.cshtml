@page
@model LoginStepTwoModel
@{
    ViewData["Title"] = "Log in - Step Two";
}

<h2>@ViewData["Title"]</h2>


<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <input type="hidden" asp-for="ReturnUrl" class="form-control" />
                <h4>Prompt the user for their challenge responses.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="Input.Email" class="form-control" />
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" disabled />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                @for (int i = 0; i < Model.Input.Factors.Count; ++i)
                {
                <div class="form-group">
                    <input type="hidden" asp-for="Input.Factors[i].Challenge" class="form-control" />
                    <label asp-for="Input.Factors[i].Challenge"></label>
                    <input asp-for="Input.Factors[i].Challenge" class="form-control" disabled />
                    <span asp-validation-for="Input.Factors[i].Challenge" class="text-danger"></span>
                </div>
                    <div class="form-group">
                        <label asp-for="Input.Factors[i].ChallengeResponse"></label>
                        <input asp-for="Input.Factors[i].ChallengeResponse" class="form-control" />
                        <span asp-validation-for="Input.Factors[i].ChallengeResponse" class="text-danger"></span>
                    </div>
                }
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" name="button" value="submit">Submit</button>
                    <button type="submit" class="cancel btn btn-default" name="button" value="cancel" CausesValidation="false">Cancel</button>
                </div>

            </form>
        </section>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
